---
import Layout from "../layouts/Layout.astro";
import {butterClient} from "../libs/buttercms";
const response = await butterClient.post.list({
    page: 1,
    page_size: 50
})
const pageData = response.data?.data;
---

<Layout>
    <div class="blog_container">
        <h1>Posts dal blog</h1>
        <div class="posts_container">
          {pageData!.map((post) => (
            <a href={"/posts/"+post.slug}>
                <div class="post_card" id={post.slug}>
                    <img class="featured_image" src={post.featured_image} alt="featured_image">
                    <div class="text_container">
                        <h3>{post.title}</h3>
                        <p>{post.summary}</p>
                    </div>
                </div>
            </a>
          ))}
        </div>
    </div>
</Layout>

<style>

    @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap');
        
    h1, h2, h4, p, a {
        font-family: 'Roboto Mono';
    }
    .blog_container {
        width: fit-content;
        padding: 25px;
    }
    .text_container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex-wrap: wrap;
        padding-right: 5px;
    }
    .post_card {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        gap: 1%;
        padding-left: 7px;
    }
    .posts_container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    
    .featured_image {
        min-width: 250px;
        max-height: 150px;
        width: 20%;
        height: 20%;
        border-radius: 8px;
    }
</style>